/* Mission Statement Styling */
.mission-statement {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    border-left: 4px solid #667eea;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 20px;
}

.mission-statement p {
    margin: 10px 0;
    color: #333;
    line-height: 1.6;
}

.mission-statement strong {
    color: #667eea;
}

@media (max-width: 768px) {
    .mission-statement {
        padding: 15px;
        margin-bottom: 15px;
    }
    
    .mission-statement p {
        margin: 8px 0;
        font-size: 0.9rem;
    }
}

/* Confirmation Modal */
.confirmation-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 10000;
    justify-content: center;
    align-items: center;
}

.confirmation-modal.hidden {
    display: none !important;
}

.confirmation-modal:not(.hidden) {
    display: flex;
}

.confirmation-content {
    background: white;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    max-width: 400px;
    width: 90%;
    animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.confirmation-content h3 {
    margin: 0 0 15px 0;
    color: #1a365d;
    font-size: 1.2rem;
}

.confirmation-content p {
    margin: 0 0 25px 0;
    color: #666;
    line-height: 1.5;
}

.confirmation-actions {
    display: flex;
    gap: 10px;
    justify-content: flex-end;
}

/* Memory Verse Widget - Styled like announcements */
.memory-verse-widget {
    background: linear-gradient(135deg, #fff5e6 0%, #fffbf0 100%);
    padding: 15px;
    border-left: 4px solid #f59e0b;
    border-radius: 6px;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.verse-title {
    color: #1a365d;
    font-weight: 600;
    margin-bottom: 8px;
    font-size: 0.95rem;
}

.verse-text {
    color: #666;
    font-size: 0.95rem;
    line-height: 1.6;
    font-style: italic;
    margin-bottom: 10px;
}

.verse-reference {
    color: #999;
    font-size: 0.85rem;
    text-align: right;
    font-weight: 500;
}

@media (max-width: 768px) {
    .memory-verse-widget {
        margin-bottom: 15px;
    }
}

/* User Link Styling */
.user-link {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    padding: 8px 12px;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
}

.user-link:hover {
    background: rgba(102, 126, 234, 0.1);
    color: #764ba2;
    transform: translateY(-2px);
}

.user-link:active {
    transform: translateY(0);
}

/* Emoji Picker Styles */
.emoji-picker-btn {
    background: none;
    border: none;
    font-size: 18px;
    cursor: pointer;
    padding: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    opacity: 0.7;
}

.emoji-picker-btn:hover {
    opacity: 1;
    transform: scale(1.2);
}

.emoji-picker {
    position: absolute;
    bottom: 70px;
    left: 0;
    background: white;
    border: 2px solid #667eea;
    border-radius: 12px;
    padding: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    max-width: 100%;
    z-index: 100;
}

.emoji-picker.hidden {
    display: none !important;
}

.emoji-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 8px;
    font-size: 20px;
}

.emoji-grid span {
    cursor: pointer;
    padding: 4px;
    border-radius: 6px;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.emoji-grid span:hover {
    background: #f0f0f0;
    transform: scale(1.3);
}

.chat-message-reactions {
    display: flex;
    gap: 4px;
    margin-top: 6px;
    flex-wrap: wrap;
}

.emoji-reaction {
    background: #f0f4f8;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 2px 8px;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    gap: 3px;
}

.emoji-reaction:hover {
    background: #e2e8f0;
    border-color: #667eea;
}

.emoji-reaction.user-reacted {
    background: #667eea;
    color: white;
    border-color: #667eea;
}

.reaction-count {
    font-size: 11px;
    font-weight: 600;
}

/* Reaction Quick Add */
.reaction-quick-add {
    display: flex;
    gap: 4px;
    margin-top: 8px;
    opacity: 0;
    transition: opacity 0.2s ease;
}

.chat-message:hover .reaction-quick-add {
    opacity: 1;
}

.quick-emoji {
    background: rgba(102, 126, 234, 0.1);
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 12px;
    padding: 2px 6px;
    cursor: pointer;
    font-size: 14px;
    transition: all 0.2s ease;
}

.quick-emoji:hover {
    background: rgba(102, 126, 234, 0.2);
    border-color: #667eea;
    transform: scale(1.2);
}

/* Typing Indicator */
.typing-indicator {
    padding: 12px 16px;
    text-align: center;
    font-size: 13px;
    color: #667eea;
    font-style: italic;
    display: flex;
    align-items: center;
    gap: 6px;
    justify-content: center;
}

.typing-indicator.hidden {
    display: none;
}

.typing-dots {
    display: flex;
    gap: 3px;
    align-items: center;
}

.typing-dots span {
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: #667eea;
    animation: typing 1.4s infinite;
}

.typing-dots span:nth-child(2) {
    animation-delay: 0.2s;
}

.typing-dots span:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes typing {
    0%, 60%, 100% {
        opacity: 0.3;
        transform: translateY(0);
    }
    30% {
        opacity: 1;
        transform: translateY(-4px);
    }
}

